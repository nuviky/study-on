<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}Welcome!{% endblock %}</title>
        <link rel="icon" href="data:image/svg+xml,<svg xmlns=%22http://www.w3.org/2000/svg%22 viewBox=%220 0 128 128%22><text y=%221.2em%22 font-size=%2296%22>⚫️</text></svg>">
        {# Run `composer require symfony/webpack-encore-bundle` to start using Symfony UX #}
        {% block stylesheets %}
            {{ encore_entry_link_tags('app') }}
        {% endblock %}

        {% block javascripts %}
            {{ encore_entry_script_tags('app') }}
        {% endblock %}
    </head>
    <body>
    <nav class="navbar navbar-light bg-light">
        <div class="container-fluid">

            {% if app.user %}
                <div>
                    {{ app.user.email }}
                    <div class="btn-group" role="group">
                        <a class="btn btn-secondary" href="{{ path('app_profile') }}">Профиль</a>
                        <a class="btn btn-secondary" href="{{ path('course_index') }}">Программы</a>
                        <a class="btn btn-secondary" href="{{ path('app_logout') }}">Выйти</a>
                    </div>
                </div>
            {% else %}
                <div>
                    <div class="btn-group" role="group">
                        <a class="btn btn-secondary" href="{{ path('app_login') }}">Войти</a>
                        <a class="btn btn-secondary" href="{{ path('course_index') }}">Программы</a>
                        <a class="btn btn-secondary" href="{{ path('app_register') }}">Регистрация</a>
                    </div>
                </div>
            {% endif %}
        </div>
    </nav>

        {% block body %}{% endblock %}
    </body>
</html>
