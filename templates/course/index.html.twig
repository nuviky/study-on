{% extends 'base.html.twig' %}

{% block title %}Программы обучения по программированию{% endblock %}

{% block body %}
    <div class="container w-25">
        <h1 class="">Список программ обучения по программированию</h1>

        {% for course in courses %}
            <div class="card">
                <div class="card-body">
                    <a href="{{ path('course_show', {'id': course.id}) }}" class="card-link">{{ course.name }}</a>
                    <div>{{ course.description }}</div>
                </div>
            </div>
        {% else %}
            <div>Доступных для прохождения курсов нет</div>
        {% endfor %}
        <a href="{{ path('course_new') }}" class="btn course-new">Создать новый курс</a>
    </div>

{% endblock %}
